<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="0dip"
	>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp" >

        <RelativeLayout
            android:id="@+id/product_photo_ly"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="1dp" >

            <ImageView
                android:id="@+id/product_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/thumb_bg"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/next_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/next" />

        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/next_list"
            android:layout_toRightOf="@id/product_photo_ly"
            android:text="索尼Xperia Za免费送团购火爆中"
            android:textColor="@color/lightblack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_title"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/product_photo_ly"
            android:text="¥ 85"
            android:textColor="@color/yellow"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/product_price_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_title"
            android:layout_marginTop="4dp"
            android:layout_marginRight="35dp"
            android:layout_toRightOf="@id/product_price"
            android:layout_toLeftOf="@id/next_list"
            android:gravity="right"
            android:text="原价¥2500"
            android:textColor="@color/gainsboro"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/buy_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_price"
            android:layout_toRightOf="@id/product_photo_ly"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:text="有1000人已购买"
            android:textSize="12sp"
            android:textColor="@color/gainsboro"
            />
    </RelativeLayout>   
</LinearLayout>  
