<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/head_bg"
	    >
	    <ImageView
	        android:id="@id/left_arrow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/left_arrow"
	        />
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignWithParentIfMissing="true"
	        android:layout_centerHorizontal="true"
	        android:layout_centerInParent="true"
	        android:ellipsize="middle"
	        android:gravity="center_horizontal"
	        android:text="详细信息"
	        android:textColor="@color/white"
	        android:textSize="20sp"
	        />
	</RelativeLayout> 
	
	<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="15dp"
			    android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:background="@drawable/shape_more"
			    android:orientation="vertical">
			    <RelativeLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="80dp">	 
			        <ImageView
			            android:id="@+id/person_tx"
			            android:layout_width="70dp"
			            android:layout_height="70dp"
			            android:background="@drawable/default_tx"
			            android:layout_centerVertical="true"			    
			            />
			         <TextView
			            android:id="@+id/person_name"
			            android:layout_width="70dp"
			            android:layout_height="70dp"
			            android:gravity="center_vertical"
			            android:text="Jacoob"
			            android:layout_alignParentRight="true" 
			            android:layout_marginRight="10dp"
			            />	
			    </RelativeLayout> 
			    <RelativeLayout 
			        android:id="@+id/detail_cellphone"
			        android:layout_width="fill_parent"
			        android:layout_height="40dp">
			        <TextView
			            android:layout_width="70dp"
			            android:layout_height="40dp"
			            android:gravity="center_vertical"
			            android:text="手机"
			            android:layout_marginLeft="10dp"
			            />
			        <TextView
			            android:id="@+id/person_phone"
			            android:layout_width="wrap_content"
			            android:layout_height="40dp"
			            android:text="18938886180"
			            android:gravity="center_vertical"
			            android:layout_alignParentRight="true" 
			            />
			        <TextView
					    android:layout_width="fill_parent"
					    android:layout_height="0.1dp"
					    android:background="@color/gray"
				    />			    
			    </RelativeLayout> 
			</LinearLayout>
			<Button 
			    android:id="@+id/person_add"
			    android:layout_width="fill_parent"
			    android:layout_height="40dp"
			    android:layout_margin="20dp"
			    android:text="添加到通讯录"
			    android:textColor="@color/white"
			    android:background="@color/login_submit"
			    />
</LinearLayout>
